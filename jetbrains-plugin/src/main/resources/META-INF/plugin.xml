<idea-plugin>
    <id>com.kyco.plugin</id>
    <name>Kyco</name>
    <vendor>kyco</vendor>
    <description><![CDATA[
        Send code selections to Kyco server.<br/>
        <br/>
        Use <b>Ctrl+Alt+Y</b> (or <b>Ctrl+Cmd+Y</b> on Mac) to send the current selection to http://localhost:9876/selection
    ]]></description>

    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <notificationGroup id="Kyco Notifications" displayType="BALLOON"/>
    </extensions>

    <actions>
        <action id="Kyco.SendSelection"
                class="com.kyco.plugin.SendSelectionAction"
                text="Kyco: Send Selection"
                description="Send code selection to Kyco server">
            <keyboard-shortcut first-keystroke="control alt Y" keymap="$default"/>
            <keyboard-shortcut first-keystroke="control meta Y" keymap="Mac OS X"/>
            <keyboard-shortcut first-keystroke="control meta Y" keymap="Mac OS X 10.5+"/>
            <add-to-group group-id="EditorPopupMenu" anchor="last"/>
            <add-to-group group-id="ToolsMenu" anchor="last"/>
        </action>
    </actions>
</idea-plugin>
